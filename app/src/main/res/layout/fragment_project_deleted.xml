<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.ProjectFragment">

  <!-- TODO: Update blank fragment layout -->
  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/recyclerProjectView"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginTop="300dp"
      tools:listitem="@layout/project_single_row"
      android:layout_marginBottom="80dp"/>

  <Button
      android:id="@+id/addProject"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/add_assignement"
      android:textSize="20sp"
      android:layout_marginBottom="50dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintBottom_toTopOf="@id/text"
      />

  <TextView
      android:id="@+id/text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="4dp"
      android:layout_marginBottom="52dp"
      android:gravity="center"
      android:text="@string/here_are_my_assignements_for_the_clicked_project"
      android:textColor="@color/black"
      android:textSize="18sp"
      android:textStyle="bold"
      app:layout_constraintBottom_toTopOf="@id/recyclerProjectView"
      app:layout_constraintEnd_toEndOf="parent" />


  <!--
